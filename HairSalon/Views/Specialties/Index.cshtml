@{
  Layout = "_Layout";
}
<div class="container">
<div class="jumbotron">
<h1>Hair Salon</h1>
</div>

<h2>Specialty List: </h2>

@if (Model.Count != 0)
{
    <ul>
    @foreach (var specialty in Model)
    {
        <li><a href='/specialties/@specialty.GetId()'>@specialty.GetName()</a></li>
    }
    </ul>
}

<h4><a href="/specialties/new">Add new specialty</a></h4>
<form action="/specialties/deleteall" method="post">
  <button type="submit">Delete all specialties</button>
</form>
<h4><a href="/stylists">View all stylists</a></h4>
<h4><a href="/clients">View all clients</a></h4>
<h4><a href="/">Return home</a></h4>
</div>
